{
    "extends": [
        "config:best-practices",
        ":prHourlyLimitNone",
        ":prConcurrentLimitNone",
        ":disableDependencyDashboard"
    ],
    "enabledManagers": [
        "custom.regex",
        "github-actions"
    ],
    "labels": [
        "renovate"
    ],
    "assignees": [
        "@ShibataTakao"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/^action.yaml$/"
            ],
            "matchStrings": [
                "\"(?<currentValue>[\\d\\.]+)\"\\s*#\\s*renovate:(?<depName>.+)"
            ],
            "datasourceTemplate": "github-releases",
            "versioningTemplate": "semver",
            "extractVersionTemplate": "^v(?<version>.*)$"
        }
    ]
}
